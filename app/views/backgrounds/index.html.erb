<h1>Listing backgrounds</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Img url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @backgrounds.each do |background| %>
  <tr>
    <td><%= background.name %></td>
    <td><%= background.description %></td>
    <td><%= background.img_url %></td>
    <td><%= link_to 'Show', background.name %></td>
    <td><%= link_to 'Edit', edit_background_path(background) %></td>
    <td><%= link_to 'Destroy', background, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

